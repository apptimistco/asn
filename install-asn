#!/bin/sh

# Install asn and it's init script.
# Run the following after the first install:
#	sudo update-rc.d asn defaults

[ "$ASN" = "" ] && ASN=asn-static
[ "$CHRDIR" = "" ] && CHRDIR=/var/chroot/asn

for x in $ASN $CHRDIR; do
	if [ ! -x $x ] ; then
		echo missing $x >/dev/stderr
		exit 2
	fi
done

install -D $ASN $CHRDIR/usr/sbin/asn || exit $?
install start-stop-asn /etc/init.d/asn || exit $?
